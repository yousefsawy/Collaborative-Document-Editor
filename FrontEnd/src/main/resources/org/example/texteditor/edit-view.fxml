<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.texteditor.JavaFxControllers.EditController">
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Label fx:id="ViewerIdFx" text="Viewer Session"/>
                <Label fx:id="EditorIdFx" text="Editor Session"/>
                <Button text="Undo" onAction="#undoButton"/>
                <Button text="Redo" onAction="#redoButton"/>

            </HBox>
        </VBox>
    </top>

    <left>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <VBox spacing="10.0">
                <Label text="Current Users"/>
                <VBox fx:id="usersList" spacing="5.0">
                </VBox>
            </VBox>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <TextArea fx:id="documentContentArea" wrapText="true" promptText="Start typing here..." />
        </ScrollPane>
    </center>
</BorderPane>